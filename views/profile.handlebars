<div class="hero-image container mt-3">
  <div class="card p-5 ">
    <h2 class="text-center">
      Welcome
      {{user.name}}
    </h2>
    <div class="hero-text row mt-4 profileContainer d-flex">

      <div class="p-3 card w-25 col-6 custom-card">
        <h3 class="mt-3">Your Personal Data</h3>
        <p>
          Name:
          {{user.name}}
        </p>
        <p>
          Lastname:
          {{user.lastname}}
        </p>
        <p>Email:
          {{user.email}}
        </p>
      </div>

      <div class="p-3 card w-25 col-6 custom-card">
        <h3 class="mt-3">Your Cart Data</h3>
        {{#if cartLength}}
        <p>
          You have {{cartLength}} items in your cart.
        </p>
        <a class="btn btn-primary" href="/view/cart/{{user.cartId._id}}" class="btn btn-primary">Go to cart</a>
        {{else}}
        <p>
          Your cart is empty. <a href="/">Go to products</a>
        </p>

        {{/if}}
      </div>

    </div>
    <button type="submit" class="btn btn-primary" id="logout">Logout</button>
  </div>
</div>
<script src="js/index.js"></script>